	background: center no-repeat/cover;	
}
.noway{
	width: 100%;
	display: flex;
	padding: 0 60rpx;
	box-sizing: border-box;
	justify-content: space-between;
}
.l_line,.r_line{
	position: relative;
}
.c_txt{
	font-size:24rpx;
	font-family:PingFang SC;
	font-weight:500;
	color:rgba(51,51,51,1);
	line-height:40rpx;
}
.l_line::before{
	content: "";
	width:80rpx;
	height:1rpx;
	background:rgba(210,210,210,1);
	position: absolute;
	left: 0;
	top: 50%;
}
.r_line::before{
	content: "";
	width:80rpx;
	height:1rpx;
	background:rgba(210,210,210,1);
	position: absolute;
	right: 0;
	top: 50%;
	
}
