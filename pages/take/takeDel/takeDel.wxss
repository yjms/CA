}
.l_info{
	max-width:484rpx;
	background:rgba(0,59,115,1);
	opacity:0.8;
	border-radius:40rpx 0rpx 40rpx 40rpx;
	font-size:26rpx;
	font-family:PingFang SC;
	font-weight:500;
	color:rgba(255,255,255,1);
	line-height:40rpx;
