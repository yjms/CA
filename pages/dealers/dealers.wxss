/* pages/dealers/dealers.wxss */
.hander{
	width: 100vw;
	height: 68rpx;
	padding:0 28rpx;
	box-sizing: border-box;
	display: flex;
	justify-content: space-between;
	align-items: center;
	background:rgba(246,247,247,1);
}
.txt1{
	font-size:26rpx;
	font-family:PingFang SC;
	font-weight:500;
	color:rgba(51,51,51,1);
}
.txt2{
	font-size:24rpx;
	font-family:PingFang SC;
	font-weight:500;
	color:rgba(32,65,137,1);
}
.relocation{
	display: flex;
	justify-content: flex-end;
}
.relocat{
	width: 26rpx;
	height: auto;
	margin-right: 9rpx;
}
.deList{
	width: 694rpx;
	height: 278rpx;
	margin: 0 auto;
	display: flex;
	align-items: center;
	border-bottom: 1rpx solid rgba(220,220,220,1);
}
.leftimg{
	width: 210rpx;
	height: 210rpx;
	background: center no-repeat/cover;
}
.rightinfo{
	flex: 1;
	padding-left: 30rpx;
	box-sizing: border-box;
	display: flex;
	flex-direction: column;
	height: 100%;
	padding-top: 50rpx;
}
.row1,.row2{
	display: flex;
	justify-content: space-between;
	align-items: center;
}
.txt3{
	font-size:30rpx;
	font-family:PingFang SC;
	font-weight:bold;
	color:rgba(51,51,51,1);
}
.yy_btn{
	width:115rpx;
	height:40rpx;
	background:rgba(241,64,62,1);
	border-radius:6rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	font-size:24rpx;
	font-family:PingFang SC;
	font-weight:500;
	color:rgba(255,255,255,1);
}
.txt4{
	font-size:24rpx;
	font-family:PingFang SC;
	font-weight:500;
	color:rgba(102,102,102,1);
	margin-top: 50rpx;
}
.row3{
	margin-top: 21rpx;
}
.txt5{
	font-size:24rpx;
	font-family:PingFang SC;
	font-weight:500;
	color:rgba(102,102,102,1);
	line-height:34rpx;
}
.tackitem>.deList:last-child{
	border-bottom: 0;
}
