.page-body-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height:100%;
}

.btn-area {
  margin-top: 60rpx;
  box-sizing: border-box;
  width: 100%;
  padding: 0 30rpx;
}
button{margin:30rpx 0;}
.camera{position: relative;}
.camera .cover-image{position: absolute;width:100%;height:100%;left:0;top:0;}
.page-body{background: #fff;height:100%;box-sizing: border-box;}
.deviceSwitch{margin:30rpx 0;border:1px solid #333;padding:15rpx;}
camera{width:520rpx;height:520rpx;}
.isFull{width:100vw;height:80vh;}
.img-list{position: fixed;width:100%;left:0;bottom:0;background: #fff;z-index: 100;display: flex;align-items: center;}
.img-list scroll-view{width:100%;}
.img-list image{width:30vw;flex-shrink: 0;margin:0 1.6vw;}
.times{position: fixed;width:100%;padding:20rpx 0;text-align: center;font-size: 70rpx;font-weight: bold;color:green;left:0;top:0;z-index: 100;}