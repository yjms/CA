/* pages/pages-list/map/my-map/index.wxss */
map{width:100vw;height:100vh !important;}
.current{position: fixed;bottom:8vh;right:2vw;width:100rpx;height:100rpx;}
image{width:100%;}
.flex-style{
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.flex-item{
  height: 35px; 
  line-height: 35px;
  text-align: center;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1
}
.flex-item.active{
  color:#0091ff;
}
.map_box{
  position:absolute;
  top: calc(35px + 80rpx);
  bottom: 0px;
  left: 0px;
  right: 0px;
}
.map_box.active{bottom: 90px;}
#navi_map{
  width: 100%;
  height: 100%;
}
.text_box{
  position:absolute;
  height: 90px;
  bottom: 0px;
  left: 0px;
  right: 0px;
}
.text_box .text{
  margin: 15px;
  color: lightseagreen;
}
.detail_button{
  position:absolute;
  bottom: 30px;
  right: 10px;
  padding: 3px 5px;
  color: #fff;
  background: #0091ff;
  width:50px;
  text-align:center;
  border-radius:5px;
}
.map-inputtips-input{
  /* height: 80rpx;
  line-height: 80rpx; */
  width: 100%;
  box-sizing: border-box;
  font-size: 30rpx;
  padding: 0 10px;
  background-color: #fff;
  /* position: fixed; */
  top: 35px;
  left: 0;
  z-index: 1000;
  border-bottom:1px solid #c3c3c3;
  padding-bottom: 10rpx;
}
.map-inputtips-input input{
  border: 1px solid #ddd;
  border-radius: 5px;
  height: 60rpx;
  line-height: 60rpx;
  width: 100%;
  box-sizing: border-box;
  padding: 0 5px;
  margin-top: 10rpx;
}
.map-box{
  margin: 0 10px;
  border-bottom:1px solid #c3c3c3;
  height: 80rpx;
  line-height: 80rpx;
}
.map-box:last-child{border: none;}
.map-search-list{
  /* position: fixed; */
  top: calc(80rpx + 35px);
  left: 0;
  width: 100%;
  z-index: 1000;
  background-color: #fff;
}
.top{position: fixed;width:100vw;left:0;top:0;z-index: 50;background: #fff;}
scroll-view{height:50vh;}
.scheme{position: fixed;width:100%;left:0;bottom:0;background: #fff;padding:20rpx 0;}
.scheme scroll-view{height:200rpx;}
.scheme .li{padding:14rpx 20rpx;border-top: 1rpx solid #eee;}
.scheme .li text{line-height: 1.5;font-size: 28rpx;}
.scheme .li text.num{color:#0091ff;}